<section class="client_section layout_padding">
    <div class="container ">
      <div class="heading_container heading_center">
        <h2>
         {{ section.settings.text_id }}
        </h2>
      </div>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        
        <div class="carousel-inner">
           {% for block in section.blocks  %}
          <div class="carousel-item  {% if forloop.first %} active {% endif %}">
           
            <div class="box">
              <div class="img-box">
               <!-- <img src="{{ block.settings.image_id | image_url: width: 85 | image_tag: alt }}"/> -->
                <img src="{{ block.settings.image_id | img_url: '' }}" alt="">
              </div>
              <div class="detail-box">
                <h4>
                  {{ block.settings.client_id }}
                </h4>
                <p>
                 {{ block.settings.para_id }}
                </p>
              </div>
            </div>
             
          </div>
          {% endfor %}
        </div>
        
        <div class="carousel_btn-box">
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
            <span class="sr-only">Next</span>
          </a>
        </div>
       
      </div>
    </div>
  </section>

{% schema %}
  {
    "name": "client section",
    "settings": [
      {
        "type": "text",
        "id": "text_id",
        "label": "client section heading",
        "default":"What is says our clients"
      }
    ],
    "blocks": [
      {
       "type": "text",
       "name":"client section",
        "limit":3,
         "settings":[
      {
        "type": "text",
        "id": "client_id",
        "label": "client name",
        "default":"Client Name"
      }, {
        "type": "text",
        "id": "para_id",
        "label": "what clients says (paragraph)",
        "default":"clients'view paragraph"
      },
           {
          "type": "image_picker",
          "id": "image_id",
          "label": "client Image"
        }
         ]
  }
    ],
    "presets": [
    {
      "name": "client section",
        "blocks":[
       {
       "type":"text"  
       }
       ]
    }
  ]
  }
{% endschema %}

